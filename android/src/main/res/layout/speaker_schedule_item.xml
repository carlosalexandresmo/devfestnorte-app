<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_schedule_item_height"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/keyline_1"
    android:paddingRight="@dimen/keyline_1">

    <ImageView
        android:id="@+id/header_schedule_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Start -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_time_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_time_hours" />

                <TextView
                    android:id="@+id/start_time_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

            <!-- End -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end_time_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="09"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_time_hours" />

                <TextView
                    android:id="@+id/end_time_minutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="00"
                    android:textColor="@color/body_text_2"
                    android:textSize="@dimen/text_size_medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Block/slot chip contents -->
        <LinearLayout
            android:id="@+id/slot_chip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/slot_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="O desafio do desenvolvimento da app em 33 paÃ­ses"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.samples.apps.iosched.ui.widget.BezelImageView
                    android:id="@+id/speaker_image"
                    android:layout_width="@dimen/speaker_image_size"
                    android:layout_height="@dimen/speaker_image_size"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/person_image_empty"
                    app:borderDrawable="@drawable/circle_border"
                    app:maskDrawable="@drawable/circle_mask" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/slot_speaker_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speaker"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/slot_speaker_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Company"
                        android:textColor="@color/body_text_2"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

     </LinearLayout>




</LinearLayout>
